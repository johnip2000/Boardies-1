<%- include('../header'); -%>

<div class="mb-auto">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-9">
                <div class="block mb-5 mt-5">
                    <div class="block-header"><strong class="text-uppercase">Change Password</strong></div>
                        <div class="block-body mt-5">
                            <form method="post" action="">
                                <input type="hidden" name="userID" value="<%=userInfo.userID%>">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="password" class="form-label">Current Password</label>
                                            <input id="password" name="password" type="text" class="form-control" value=""> 
                                            <% if(typeof passwordError !== 'undefined' && passwordError) { %>
                                                <small id="passwordError" class="form-text text-danger font-weight-bold"><%=passwordError%></small>
                                            <% } %>           
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="newPassword" class="form-label">New Password</label>
                                            <input id="newPassword" name="newPassword" type="text" class="form-control" value="">
                                            <% if(typeof newPasswordError !== 'undefined' && newPasswordError) { %>
                                                <small id="newPasswordError" class="form-text text-danger font-weight-bold"><%=newPasswordError%></small>
                                            <% } %>     
                                        </div>
                                    </div>
                                </div>
                                <% if(typeof updateMessage !== 'undefined' && updateMessage) { %>
                                    <small id="updateMessage" class="form-text text-success font-weight-bold text-center mt-2"><%=updateMessage%></small>
                                <% } %>  
                                <% if(typeof updateError !== 'undefined' && updateError) { %>
                                    <small id="updateError" class="form-text text-danger font-weight-bold text-center mt-2"><%=updateError%></small>
                                <% } %>  
                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-outline-dark"><i class="far fa-save mr-2"></i>Change Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            <div class="col-xl-3 col-lg-4 mb-5 mt-5">
                <div class="customer-sidebar card border-0">
                    <div class="customer-profile">
                        <h5><%=userInfo.fullName%></h5>
                    </div>
                    <nav class="list-group customer-nav">
                        <a href="/customer/profile" class="list-group-item">
                            <i class="far fa-user-circle mr-2"></i> Profile
                        </a>
                        <a href="/customer/address" class="list-group-item">
                            <i class="fas fa-map-marker-alt mr-2"></i> Address Information
                        </a>
                        <a href="/customer/orders" class="list-group-item">
                            <i class="fas fa-shopping-bag mr-2"></i> Your Order
                        </a>
                        <a href="/customer/changepassword" class="list-group-item active"><span>
                          <i class="fas fa-key mr-2"></i>Change your password</span>
                        </a>
                        <a href="/logout" class="list-group-item"><span>
                            <i class="fas fa-sign-out-alt mr-2"></i>Log out</span>
                          </a>    
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer'); -%>