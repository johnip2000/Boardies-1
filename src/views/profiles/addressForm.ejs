<%- include('../header'); -%>

<div class="mb-auto mt-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-9 mb-5">
                <form method="post" action="/customer/adddress/save">
                    <div class="block-body">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="address-firstName">First Name *</label>
                                <input type="text" id="address-firstName" class="u-full-width form-control" name="address[firstName]" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-lastName">Last Name *</label>
                                <input type="text" id="address-lastName" class="u-full-width form-control" name="address[lastName]" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-address1">Address 1 *</label>
                                <input type="text" id="address-address1" class="u-full-width form-control" name="address[address1]" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-address2">Address 2</label>
                                <input type="text" id="address-address2" class="u-full-width form-control" name="address[address2]" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-city">City *</label>
                                <input type="text" id="address-city" class="u-full-width form-control" name="address[city]" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-zipCode">Postal Code *</label>
                                <input type="text" id="address-zipCode" class=" form-control" name="address[zipCode]" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-state">Province *</label>
                                <select id="address-stateId" data-modelname="address" class="form-control" name="address[stateId]">
                                    <option value="9">Alberta</option>
                                    <option value="10">British Columbia</option>          
                                    <option value="11">Manitoba</option>
                                    <option value="12">New Brunswick</option>
                                    <option value="13">Newfoundland and Labrador</option>
                                    <option value="15">Nova Scotia</option>
                                    <option value="17">Ontario</option>
                                    <option value="18">Prince Edward Island</option>
                                    <option value="19">Quebec</option>
                                    <option value="20">Saskatchewan</option>               
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-countryId">Country *</label>
                                <select class="form-control" name="address[countryId]">
                                    <option value="38"  selected>Canada</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address-phone">Phone</label>
                                <input type="text" id="address-phone" class="u-full-width form-control" name="address[phone]" value="">
                            </div>
                        </div>
                    </div>                      
                    <div class="mt-4 d-flex justify-content-between flex-column flex-lg-row">
                        <a href="/customer/address" class="btn btn-link text-muted"> <i class="fa fa-angle-left mr-2"></i>Back </a>
                        <input type="submit" class="btn btn-dark" value="Save Address">
                    </div>
                </form>
            </div>
            <div class="col-xl-3 col-lg-4 mb-5">
                <div class="customer-sidebar card border-0">
                    <div class="customer-profile">
                        <h5>Mark Tran</h5>
                    </div>
                    <nav class="list-group customer-nav">
                        <a href="/customer/profile" class="list-group-item">
                            <i class="far fa-user-circle mr-2"></i> Profile
                        </a>
                        <a href="/customer/address" class="list-group-item active">
                            <i class="fas fa-map-marker-alt mr-2"></i> Address Information
                        </a>
                        <a href="/customer/orders" class="list-group-item">
                            <i class="fas fa-shopping-bag mr-2"></i> Your Order
                        </a>
                        <a href="/customer/changepassword" class="list-group-item"><span>
                          <i class="fas fa-key mr-2"></i>Change your password</span>
                        </a>
                        <a href="/logout" class="list-group-item"><span>
                            <i class="fas fa-sign-out-alt mr-2"></i>Log out</span>
                          </a>    
                    </nav>
                </div>
            </div>  
        </div>      
    </div>
</div>

<%- include('../footer'); -%>