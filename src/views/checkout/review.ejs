<%- include('../header'); -%>

<div class="mb-auto">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-8">
                <div class="block mb-5 mt-5">
                    <div class="col-12 bg-light">
                        <ul class="nav nav-pills mb-4 nav-fill bg-light">
                            <li class="nav-item"><a href="/checkout/addresses" class="nav-link text-sm">ADDRESSES</a></li>
                            <li class="nav-item"><a href="/checkout/shipping" class="nav-link text-sm">SHIPPING</a></li>
                            <li class="nav-item"><a href="/checkout/review" class="nav-link text-sm bg-secondary text-white">REVIEW</a></li>
                        </ul>
                    </div>
                    <div class="card mt-4">
                        <h5 class="card-header">Shipping Address</h5>
                        <div class="card-body bg-light">
                            <p><%=DName%></p>
                            <p><%=DAddr1%>, <%=DAddr2%><p>
                            <p><%=DCity%>, <%=DProv%>, <%=DPost%></p>
                            <p><%=DCountry%></p>
                            <p><%=DPhone%></p>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <h5 class="card-header">Shipping Method</h5>
                        <div class="card-body bg-light">
                            <p><%=ShippingMethod%><p>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" value="dfsf">
                        <div class="mb-5 mt-4 d-flex justify-content-between flex-column flex-lg-row">
                            <a href="/checkout/shipping" class="btn btn-link text-muted">
                                <i class="fa fa-angle-left mr-2"></i>Back </a>


                            <script
                                    src="//checkout.stripe.com/v2/checkout.js"
                                    class="stripe-button"
                                    data-key="<%= key %>"
                                    data-amount="<%=Fee%>"
                                    data-currency="cad"
                                    data-name="<%=CustomerName%>"
                                    data-description="Welcome. Hope to see you again"
                                    data-locale="auto" >
                            </script>
                        </div>
                    </form>
                </div>

            </div>
            <div class="col-xl-4 col-lg-4 mb-5 mt-5">
                <div class="customer-sidebar card border-0">
                    <div class="order-summary text-uppercase text-center">Order Summary</div>
                    <nav class="list-group customer-nav">
                        <div class="list-group-item bg-light">
                            <tbody>
                            <tr>
                                <%ItemsPurchase.forEach(function(item){%>
                                <div class="float-left mr-3"> <img class=" img-fluid" src="<%=item.CartProductImage%>" width="100" height="80"></div>
                                <p class="mt-2 mb-0"><b><%=item.ProductName%></b></p>
                                <small class="text-muted">Quantity: <%=item.CartProductQuantity%></small><br>
                                <small class="text-muted">Price: <%=item.Price%></small><br><br><br>
                                <%})%>
                            </tr>
                            </tbody>
                        </div>
                        <div class="list-group-item bg-light">
                            <div class="float-left">Order Subtotal</div>
                            <div class="float-right">$<%=Subtotal%></div>
                        </div>
                        <div class="list-group-item bg-light">
                            <div class="float-left">Shipping Fee</div>
                            <div class="float-right">$<%=DShipping%></div>
                        </div>
                        <div class="list-group-item bg-light">
                            <div class="float-left">GST/HST</div>
                            <div class="float-right">$<%=DTax.toFixed(2)%></div>
                        </div>
                        <div class="list-group-item bg-light">
                            <div class="float-left">Total</div>
                            <div class="float-right font-weight-bold">$<%=DTempTotal.toFixed(2)%></div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer'); -%>