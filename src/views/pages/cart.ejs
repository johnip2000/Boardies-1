<%- include('../header'); -%>

<div class="container">
  <div class="row">
    <div class="col-lg-12 p-5">
      <!-- Shopping cart table -->
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th scope="col" class="border-0 bg-light">
              <div class="p-2 px-3 text-uppercase">Product</div>
            </th>
            <th scope="col" class="border-0 bg-light">
              <div class="py-2 text-uppercase">Price</div>
            </th>
            <th scope="col" class="border-0 bg-light">
              <div class="py-2 text-uppercase">Quantity</div>
            </th>
            <th scope="col" class="border-0 bg-light">
              <div class="py-2 text-uppercase">Remove</div>
            </th>
          </tr>
          </thead>
          <h1 class="form-text text-danger font-weight-bold text-left mt-2"><%=Warning%></h1>
          <% listCart.forEach(function(item){%>
          <tbody>
          <tr>
            <th scope="row" class="border-0">
              <div class="p-2">
                <img src="<%=item.CartProductImage%>" alt="" width="70" class="img-fluid rounded shadow-sm">
                <div class="ml-3 d-inline-block align-middle">
                  <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle"><%=item.ProductName%></a></h5><span class="text-muted font-weight-normal font-italic d-block">Category: <%=item.ProductCate%></span>
                </div>
              </div>
            </th>
            <td class="border-0 align-middle"><strong><%=item.Price.toFixed(2)%></strong></td>
            <td class="border-0 align-middle"><a href="/minusitem?CartID=<%=item.CartID%>" class="text-dark ml-2"><i class="fa fa-minus-square fa-lg"></i></a> <strong><%=item.CartProductQuantity%></strong><a href="/additem?CartID=<%=item.CartID%>" class="text-dark"> <i class="fa fa-plus-square fa-lg"></i></a></td>
            <td class="border-0 align-middle"><a href="/remove?CartID=<%=item.CartID%>" class="text-dark"><i class="fa fa-trash fa-lg ml-3"></i></a></td>
          </tr>
          </tbody>
          <%});%>
        </table>
      </div>
      <!-- End -->
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
      <div class="p-4">
        <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
        <div class="input-group mb-4 border rounded-pill p-2">
          <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3" class="form-control border-0">
          <div class="input-group-append border-0">
            <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Apply coupon</button>
          </div>
        </div>
      </div>
      <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Instructions for seller</div>
      <div class="p-4">
        <p class="font-italic">If you have some information for the seller you can leave them in the box below</p>
        <textarea name="" cols="30" rows="2" class="form-control"></textarea>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
      <div class="p-4">
        <p class="font-italic">Shipping and additional costs are calculated based on values you have entered.</p>
        <ul class="list-unstyled mb-4">
          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal </strong><strong>$<%=Subtotal.toFixed(2)%></strong></li>
          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and handling</strong><strong>$00.00</strong></li>
          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Tax</strong><strong>$00.00</strong></li>
          <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
            <h5 class="font-weight-bold">$<%=Subtotal.toFixed(2)%></h5>
          </li>
        </ul><a href="#" class="btn btn-dark rounded-pill py-2 btn-block">Procceed to checkout</a>
      </div>
    </div>
  </div>
</div>

<%- include('../footer'); -%>