<%- include('../header'); -%>

<div class="container mt-4 mb-4">
    <div class="top-content">
        <h4>Game Details</h4>
        <div class="dropdown-divider"></div>
    </div>
    <div class="row mt-4 mb-4">
        <% listGame.forEach(function(item){%>
        <div class="col-4 col-sm-8 col-md-6 col-lg-4 mb-4">
            <div class="card" style="width: 20rem">
                <img src="<%=item.productImage%>" class="card-img-top" alt="..."/>
                <div class="card-body">
                </div>
                <div class="d-flex justify-content-center">
                    <div class="card-body">
                        <div class="d-flex justify-content-center"><a href="#" class="btn btn-danger"><i class="fas fa-shopping-cart"></i> Add to Cart</a></div>
                    </div>
                 </div>
            </div>
        </div>
        <div class="col-lg-5">
            <h5>

                Product Name:     <%=item.productName%><br><br>
                Product Price:    $<%=item.productPrice%><br><br>
                Units in Stock:   <%=item.unitsInStock%><br><br>
                Product Description: <%=item.productDescription%><br><br>
                Manufacture Year: <%=item.manufactureYear%><br><br>
            </h5>
        </div>
        <% }); %>
    </div>
</div>

<%- include('../footer'); -%>